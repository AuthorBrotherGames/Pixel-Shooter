<Page x:Class="Space_Game_1.OnePlayerGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Game_1"
        mc:Ignorable="d"
        Title="Brute Fleet" Height="615" Width="540">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Canvas Name="MyCanvas" Focusable="True" Background="Black">

        <Rectangle Name="Enemy" Height="65" Width="47" Fill="red" Tag="enemy" Canvas.Left="240" Canvas.Top="20"/>
        <Rectangle Name="Player" Height="65" Width="47" Fill="green" Tag="player" Canvas.Left="240" Canvas.Top="520"/>

        <Label Name="enemyLivesText" Content="Enemy Lives: 0"/>
        <Label Name="playerLivesText" Content="Player Lives: 0" Canvas.Right="20"/>
        <Label Name="ammoText" Content="Ammo: 0" Canvas.Right="20" Canvas.Bottom="20"/>
    </Canvas>
</Page>
